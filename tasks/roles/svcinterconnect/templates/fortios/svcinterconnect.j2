config system interface
    edit "wan1"
        set ip {{ vrfs.public.access_range }}.{{ rack_id }}.{{ 255 - service_id }} 255.255.255.0
    next
    edit "wan2"
        set ip {{ vrfs.service.access_range }}.{{ rack_id }}.{{ 255 - service_id }} 255.255.255.0
    next
end
config router bgp
    set as {{ vrfs.public.as_range + 10000 - service_id }}
        config neighbor
            edit "{{ vrfs.public.access_range }}.{{ rack_id }}.1"
                set remote-as {{ vrfs.public.as_range + rack_id }}
            next
            edit "{{ vrfs.service.access_range }}.{{ rack_id }}.1"
                set remote-as {{ vrfs.service.as_range + rack_id }}
            next
        end
end
