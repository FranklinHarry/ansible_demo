routing-options {
    autonomous-system {{ asn[inventory_hostname.split('.')[1]] }};
}

{% for interface, neighbors in lldp_neighbors.iteritems() %}
{% for neighbor in neighbors %}
{% if neighbor['hostname'].startswith('p-') and interface != 'ge-0/0/0.0' %}
interfaces {
     {{ interface }} {
            family inet {
                address {{ core_interconnects[neighbor['hostname']] }}.{{ neighbor['port'][-1]|int * 2 + 1 }}/31;
            }
        }
}
protocols {
    bgp {
        group UPSTREAM {
            neighbor {{ core_interconnects[neighbor['hostname']] }}.{{ neighbor['port'][-1]|int * 2 }} {
                peer-as {{ asn['core'] }}
            }
        }
    }
}
{% endif %}
{% endfor %}
{% endfor %}
